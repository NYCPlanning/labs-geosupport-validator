<table class="ui very basic striped table">
  <thead>
    <tr><th>Done?</th>
    <th>Left</th>
    <th>Right</th>
    <th>Filename</th>
    <th>Date</th>
    <th>Header</th>
  </tr></thead>
  <tbody>
    {{#each lines as |line|}}
      <tr>
        <td rowspan="2" data-label="Completed">
          <h2 class="ui center aligned header">
            {{ui-checkbox label=""}}
          </h2>
        </td>
        <td data-label="Left">
          <h2 class="ui center aligned header">
            {{line.left}}
          </h2>
        </td>
        <td data-label="Right">
          <h2 class="ui center aligned header">
            {{line.right}}
          </h2>
        </td>
        <td data-label="Filename">{{line.name}}</td>
        <td data-label="Date">{{line.date}}</td>
        <td data-label="Header">{{line.currentHeader}}</td>
      </tr>
      <tr local-class="line-cell">
        <td colspan="5" local-class="line-cell">
          {{!-- <div local-class="line-viewer"> --}}
            <pre local-class="line-viewer">{{line.line}}</pre>
          {{!-- </div> --}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
